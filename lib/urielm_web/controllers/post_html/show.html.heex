<div class="min-h-screen bg-base-100 flex flex-col">
  <div class="flex-1 max-w-4xl mx-auto w-full px-4 sm:px-6 lg:px-8 py-10 lg:py-14">
    <p class="text-xs sm:text-[13px] text-base-content/60 mb-6">
      <.link navigate={~p"/blog"} class="inline-flex items-center gap-1 hover:text-primary transition-colors">
        &larr; Back to blog
      </.link>
    </p>

    <header class="mb-12 lg:mb-16">
      <h1 class="text-4xl sm:text-5xl font-bold tracking-tight text-base-content mb-4">
        <%= @post.title %>
      </h1>

      <div class="flex flex-wrap items-center gap-3 text-xs sm:text-sm text-base-content/60">
        <span>
          <%= if @post.published_at do %>
            <%= Calendar.strftime(@post.published_at, "%b %d, %Y") %>
          <% else %>
            Draft
          <% end %>
        </span>

        <span class="hidden sm:inline text-base-content/40">â€¢</span>

        <span class="inline-flex items-center gap-1">
          <span class="w-1.5 h-1.5 rounded-full bg-primary/70"></span>
          <span>Blog</span>
        </span>
      </div>
    </header>

    <article class="prose prose-invert max-w-[70ch]">
      <%= markdown_to_html(@post.body) %>
    </article>
  </div>
</div>
